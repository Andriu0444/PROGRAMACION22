# PROGRAMACION22
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    
    int id, stock = 0, opcion, cantidad;
    float precio, ganancias = 0;
    char nombre[50];

    printf("=== Registro del producto ===\n");
    printf("Ingrese ID del producto: ");
    scanf("%d", &id);
    getchar(); 

    printf("Ingrese nombre del producto: "); 
    fgets(nombre, sizeof(nombre), stdin);
    nombre[strcspn(nombre, "\n")] = '\0'; 

    printf("Ingrese cantidad en stock: ");
    scanf("%d", &stock);

    printf("Ingrese precio unitario: ");
    scanf("%f", &precio);

    do {
printf("\n=== MENU ===\n");
        printf("1. Vender producto\n");
        printf("2. Reabastecer producto\n");
        printf("3. Consultar informacion\n");
        printf("4. Mostrar ganancias\n");
        printf("5. Salir\n");
        printf("Seleccione una opcion: ");
        scanf("%d", &opcion);

        switch(opcion) {
            case 1: 
                printf("Ingrese cantidad a vender: ");
                scanf("%d", &cantidad);

                if (cantidad <= 0) {
                    printf("Cantidad invalida.\n");
                } else if (cantidad > stock) {
                    printf("No hay suficiente stock. Stock disponible: %d\n", stock);
                } else {
                    stock -= cantidad;
                    ganancias += cantidad * precio;
                    printf("Venta realizada con exito. Stock restante: %d\n", stock);
                }
                break;
                            case 2: 
                printf("Ingrese cantidad a agregar al stock: ");
                scanf("%d", &cantidad);
                if (cantidad > 0) {
                    stock += cantidad;
                    printf("Reabastecimiento exitoso. Stock actual: %d\n", stock);
                } else {
                    printf("Cantidad invalida.\n");
                }
                break;

            case 3: 
                printf("\n--- Informacion del producto ---\n");
                printf("ID: %d\n", id);
                printf("Nombre: %s\n", nombre);
                printf("Stock actual: %d\n", stock);
                printf("Precio unitario: %.2f\n", precio);
                break;

            case 4: 
                printf("Ganancias obtenidas: $%.2f\n", ganancias);
                break;

            case 5: 
                printf("Saliendo del programa...\n");
                break;

            default:
                printf("Opcion invalida. Intente de nuevo.\n");
        }
    } while(opcion != 5);

    return 0;
}
